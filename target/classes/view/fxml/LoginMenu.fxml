<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginMenuController"
            prefHeight="640.0" prefWidth="1080.0">
    <center>
        <VBox spacing="10" alignment="CENTER" maxWidth="330">
            <Text id="title" text="Welcome!"/>
            <Label text="Username"/>
            <TextField fx:id="username" promptText="enter your username"/>
            <Label text="password"/>
            <TextField fx:id="password" promptText="enter your password"/>
            <Button styleClass="primary-btn" text="Login" onMouseClicked="#loginPlayer"/>
            <Button styleClass="secondary-btn" text="Register" onMouseClicked="#registerPlayer"/>
            <Button styleClass="third-btn" text="Play As Guest" onMouseClicked="#playAsGuest"/>
            <Label fx:id="message" text=""/>
        </VBox>
    </center>

</BorderPane>
