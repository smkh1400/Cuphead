<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainMenuController"
            prefHeight="640.0" prefWidth="1080.0" style="-fx-background-color: #4b4b4b" stylesheets="@../CSS/MainMenu.css">
    <top>
        <VBox>
            <Text/>
            <Text/>
            <Text/>
            <Text/>
            <Text/>
            <Text/>
            <Text/>
            <HBox spacing="10" alignment="CENTER">
                <Rectangle width="100" height="100"/>
                <Text text="CUP HEAD" textAlignment="CENTER" style="-fx-font-size: 100; -fx-fill: rgba(239,226,49,0.74); -fx-font-family: 'Gabriola'"/>
                <Rectangle width="150" height="120" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Button text="Start new game" onMouseClicked="#startNewGame" />
            <Button text="Profile" onMouseClicked="#openProfile"/>
            <Button text="Scoreboard" onMouseClicked="#showScoreBoard"/>
            <Button text="Settings" onMouseClicked="#goToSettings"/>
            <Button text="Exit" onMouseClicked="#exit"/>
        </VBox>
    </center>
</BorderPane>
